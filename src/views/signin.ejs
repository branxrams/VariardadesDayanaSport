<!DOCTYPE html>
<html>
  <%- include("./partials/Head") %>
  <body>
    <div id="indexPageContainer" class="centered">
      <div class="logoSection centered">
        <%- include("./partials/AppLogo") %>
      </div>

      <div class="headerTitleSection centered">
        <%- include("./partials/Header", {title: 'BIENVENIDO'}) %>
      </div>

      <div class="interactionSection">
        <%- include("./partials/LoginNavbar") %>

        <form id="formContainer" action="/signin" method="POST">
          <div class="formBox">
            <label for="nombre">Nombre</label>
            <input
              type="text"
              id="userName"
              class="formInputText shadows"
              name="nombre"
              placeholder="Ingrese su nombre completo"
              value= "<%= locals.oldData && oldData.nombre ? oldData.nombre : '' %>"
              required
            />
            <% if (locals.errors && errors.nombre) { %>
            <%- include("./partials/ErrorBox", {error: errors.nombre.msg}) %>
            <% } %>
          </div>

          <div class="formBox">
            <label for="cargo">Cargo</label>
            <select id="cargo" name="cargo" required>
              <option disabled selected>Seleccione el cargo</option>
              <option value="empleado">Empleado</option>
              <option value="administrador">Administrador</option>
            </select>
          </div>

          <div class="formBox">
            <label for="celular">Celular</label>
            <input
              type="tel"
              id="userPhone"
              class="formInputText shadows"
              name="celular"
              pattern="[0-9]+"
              placeholder="Ingrese su número de celular"
              value= "<%= locals.oldData && oldData.celular ? oldData.celular : '' %>"
              required
            />
            <% if (locals.errors && errors.celular) { %>
            <%- include("./partials/ErrorBox", {error: errors.celular.msg}) %>
             <% } %>
          </div>

          <div class="formBox">
            <label for="contrasena">Contraseña</label>
            <input
              type="password"
              id="userPassword"
              class="formInputText shadows"
              name="password"
              placeholder="Ingrese su contraseña"
              required
            />
            <% if (locals.errors && errors.password) { %>
            <%- include("./partials/ErrorBox", {error: errors.password.msg}) %>
             <% } %>
          </div>

          <div class="centered">
            <button class="standardButton shadows" type="submit">
              <a class="standardButtonText"> Registrarme</a>
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
